{% extends "base.html.twig" %}

{% block content %}
    <div class="home home-suppliers">
        <div class="container">
            <div class="header">
                <div class="pl-3 row intro-container justify-content-center">
                    <h1 class="title">{{ "for_suppliers"|trans({}, "articles") }}</h1>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-6">
                        <p class="description">{{ "for_suppliers_description"|trans({}, "articles") }}</p>
                    </div>
                </div>
            </div>

            <div class="mt-4 advantages">
                <div class="row justify-content-center">
                    <h2 class="title">{{ "for_suppliers_advantages"|trans({}, "articles") }}</h2>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-8">
                        <p class="description">{{ "for_suppliers_advantages_description"|trans({}, "articles") |raw }}</p>
                    </div>
                </div>
            </div>

            <div class="mt-4 cost">
                <div class="row justify-content-center">
                    <h2 class="title">{{ "for_suppliers_cost"|trans({}, "articles") }}</h2>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-8">
                        <p class="description">{{ "for_suppliers_cost_description"|trans({}, "articles") |raw }}</p>
                    </div>
                </div>
            </div>

            <div class="row mt-4 justify-content-center buttons">
                <a href="{{ path("register") }}"
                   class="btn btn-primary register">{{ "button_register"|trans({}, "articles") }}</a>
            </div>

            <!--<div class="mt-4">
                <div class="row justify-content-center">
                    <h2>{{ "for_suppliers_links"|trans({}, "articles") }}</h2>
                </div>
            </div>-->
        </div>

    </div>
{% endblock %}
