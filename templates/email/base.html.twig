{# Some clients requires CSS to be inlined. This is handled by inline_css macro. #}
{% apply inline_css %}
    <style>
        body {
            font-family: "Nunito", sans-serif;
        }

        p {
            line-height: 1.4rem;
        }

        a {
            color: #2f2fa2;
        }

        hr {
            border: 0;
            height: 0;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }

        footer p {
            color: rgba(64, 64, 64, 0.6);
        }

        .btn {
            font-weight: 500;
            line-height: 1.6;
            text-align: center;
            vertical-align: middle;
            padding: 0.3125rem 2rem;
            font-size: 0.9rem;
            border-radius: 0.125rem;
        }

        .btn-center {
            display: block;
            margin: 0 auto;
            width: fit-content;
        }

        .btn-primary {
            color: #fff;
            background-color: #2f2fa2;
            border-color: #2f2fa2;
        }

        .btn-primary:hover {
            background: #242582;
            color: white;
        }
    </style>

    {# CSS overrides #}
    {% block style %}{% endblock %}

    {# Email body #}
    {% block body %}{% endblock %}
{% endapply %}