{% extends "base.html.twig" %}

{% block content %}
    <section class="content inquiry-detail">
        <div class="container">
            <div class="row justify-content-center">
                <section class="inquiry-detail-left card col-md-10 col-lg-6">
                    <h1>{{ inquiry.title }}</h1>
                    <ul class="inquiry-tags">
                        <li><span class="badge bg-primary">Čeká na nabídky</span></li>
                        <li><span class="badge bg-primary">Čeká na nabídky</span></li>
                    </ul>

                    <hr/>
                    <p>{{ inquiry.description }}</p>

                    <section class="inquiry-attachments">

                    </section>

                    <button class="btn btn-primary">Kontaktovat</button>
                </section>
                <div class="inquiry-detail-right col-md-10 col-lg-4">
                    <ul class="inquiry-properties">
                        <li><span class="fas fa-hashtag me-2"></span>Evidenční číslo: {{ inquiry.id }}</li>
                        <li><span class="fas fa-calendar-day me-2"></span>Zadáno: {{ inquiry.createdAt|date("d.m.Y H:m") }}</li>
                        <li><span class="fas fa-map-marker-alt me-2"></span>Místo realizace: {{ inquiry.region.title }}</li>
                        <li>Typ: {{ inquiry.type.title|trans }}</li>
                        <li><span class="fas fa-clock me-2"></span>Termín: {{ inquiry.deadline.title|trans }}</li>
                        <li><span class="fas fa-dollar-sign me-2"></span>Předpokládaná cena: {{ inquiry.value.title|trans }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}