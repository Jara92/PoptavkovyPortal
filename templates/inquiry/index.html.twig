{% extends "base.html.twig" %}

{% block scripts %}

{% endblock %}

{% block content %}
    <section class="inquiry-index">
        <div class="jumbotron">
            <h1 class="text-center">Popt√°vky</h1>
        </div>

        <div class="container">
            <div id="inquiry-filter">
                {{ form(form, {"method":"GET"}) }}
            </div>

            <div class="container">
                {% include "inquiry/layouts/list.html.twig" with inquiries %}
            </div>

            {# @var pagination \App\Filter\Pagination #}
            <section class="pagination">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {% if not pagination.previous.isValid %}disabled{% endif %}" >
                            <a class="page-link" href="{{ pagination.previous.url }}" tabindex="-1">Previous</a>
                        </li>
                        {% for page in pagination.items %}
                            <li class="page-item {% if page.active %}active{% endif %}"><a class="page-link" href="{{ page.url }}">{{ page.id }}</a></li>
                        {% endfor %}
                        <li class="page-item {% if not pagination.next.isValid %}disabled{% endif %}">
                            <a class="page-link" href="{{ pagination.next.url|default("") }}">Next</a>
                        </li>
                    </ul>
                </nav>
            </section>
        </div>
    </section>
{% endblock %}
