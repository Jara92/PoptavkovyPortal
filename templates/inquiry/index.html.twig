{% extends "base.html.twig" %}

{% block styles %}
    <style>

    </style>
{% endblock %}

{% block content %}
    <section class="inquiry-index">
        <div class="jumbotron">
            <h1 class="text-center">Popt√°vky</h1>
        </div>

        <div class="container">
            <div id="inquiry-filter">
                {{ form_start(form, {"method":"GET"}) }}

                <div class="row justify-content-center search-container">
                    <div class="col-md-12 col-lg-10 ">
                        <div class="input-group">
                            {{ form_widget(form.text, {"class": "form-control"}) }}
                            {{ form_row(form.submit, {'attr': {'class': 'btn-outline-secondary btn btn-primary btn-search'}}) }}
                            <div>
                                <a class="btn-outline-secondary btn btn-link btn-clear-filter"
                                   href="{{ path("inquiries") }}">{{ "inquiries.btn_clear"|trans }}</a>
                            </div>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Separated link</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

            <div class="container">
                {% include "inquiry/layouts/list.html.twig" with inquiries %}
            </div>

            {% include "layouts/pagination.html.twig" with {pagination} %}
        </div>
    </section>
{% endblock %}
