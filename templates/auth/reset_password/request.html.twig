{% extends 'base.html.twig' %}

{% block title %}{{ "auth.reset_password"|trans }} | {{ parent() }}{% endblock %}

{% block page_name %}auth-forgotten-password{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-sm col-lg-6 col-md-10 mt-6">
            <section class="row cardbox">
                <div class="col-md-8 pt-2 cardbox-item">
                    <h2 class="text-center"><span class="fas fa-key pe-2"></span>{{ "auth.forgotten_password"|trans }}
                    </h2>
                    <p class="text-justify">{{ "auth.forgotten_password_desc"|trans }}</p>

                    <div class="w-75 btn-center">
                        {{ form_start(form) }}
                        <div class="errors">
                            {{ form_errors(form) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-md-4 cardbox-siderbar">
                    <div class="text-center mb-4">
                        <span class="fa fa-8x fa-headset text-center"></span>
                    </div>
                    <p class="">
                        {{ "auth.verification_still_troubles.1"|trans }}
                        <a class="btn-link" style="color:white;text-decoration: underline;"
                           href="mailto:{{ "app.email"|trans }}">{{ "app.email"|trans }}</a>
                        {{ "auth.verification_still_troubles.2"|trans }}
                    </p>
                </div>
            </section>
        </div>
    </section>
{% endblock %}
