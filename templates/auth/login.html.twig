{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block styles %}
    <style>

    </style>
{% endblock %}

{% block content %}
    <section class="auth-login">
        <div class="container login-container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 login-form">
                    <h2>{{ "auth.login"|trans }}</h2>
                    {{ form_start(form) }}
                    {# Style errors. #}
                    <div class="errors">
                        {{ form_errors(form) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form._username, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form._password, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form._remember_me, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group mb-4">
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary btn-login'}}) }}
                    </div>

                    <div class="row">
                        <div class="col-md-12 pb-2">
                            <a href="#" class="btn-link btn-lost-password">
                                {{ "auth.btn_forgotten_password"|trans }}
                            </a>
                        </div>
                        <div class="col-md-12">
                            <a href="{{ path("app_register") }}" class="btn-link btn-not-registred">
                                {{ "auth.not_registred_yet"|trans }}
                            </a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}